<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@android:color/transparent"
    tools:context=".MainActivity"
    android:id="@+id/mainlayout"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:src="@drawable/pointera"
        android:layout_marginBottom="4dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:layout_width="105dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Set your height and weight in settings"
        android:id="@+id/textView"
        android:layout_marginLeft="4dp"
        android:textColor="#000000"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="105dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/pointer"
        android:layout_below="@+id/imageView1"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select a ngo under NGO to support"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:src="@drawable/line"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NGOs whom you have supported are under SUPPORTED"
        android:textColor="#000000"        android:id="@+id/textView3"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView2" />


</RelativeLayout>
