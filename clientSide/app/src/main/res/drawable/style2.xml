<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" android:state_focused="true">
    <shape>
        <gradient 
            android:startColor="#512DA8"
            android:centerColor="#512DA8"
            android:endColor="#512DA8"
            android:angle="270"
        />
        <stroke
            android:width="2.3dp"
            android:color="#673AB7" />
         <corners
            android:radius="10dp" />
    </shape>
</item>

<item android:state_pressed="true" android:state_focused="false">
    <shape>
        <gradient 
            android:startColor="#512DA8"
            android:centerColor="#512DA8"
            android:endColor="#512DA8"
            android:angle="270"
        />
        <stroke
            android:width="2.3dp"
            android:color="#512DA8" />
        <corners
            android:radius="10dp" />       
    </shape>
</item>

<item android:state_pressed="false" android:state_focused="true">
    <shape>
        <gradient 
            android:startColor="#512DA8"
            android:centerColor="#512DA8"
            android:endColor="#512DA8"
            android:angle="270"
        />
        <stroke
            android:width="0.7dp"
            android:color="#000000" />  
        <corners
            android:radius="10dp" />                          
    </shape>
</item>

<item android:state_pressed="false" android:state_focused="false">
    <shape>
        <gradient 
            android:startColor="#512DA8"
            android:centerColor="#512DA8"
            android:endColor="#512DA8"
            android:angle="270"
        />
        <stroke
            android:width="0.7dp"                
            android:color="#512DA8" />
        <corners
            android:radius="10dp" />            
    </shape>
</item>

<item android:state_enabled="true">
    <shape>
        <padding 
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
            />
    </shape>
</item>
    

</selector>
